#!/bin/bash
#

#****************************************************************
## Start timer:
START=$(date +%s)

#****************************************************************
## Set version info:
rn=Mackay_ROM
rv=2.0.2
kn=Mackay_kernel
kv=0.201wifitest
s2rv=$rv-s2
p970rv=$rv-p970
p4wifirv=$rv-p4wifi

#****************************************************************
## Check for missing parameters:

if [ "$1" != "s"  ] && [ "$1" != "s2"  ] && [ "$1" != "p970"  ] && [ "$1" != "p4wifi"  ]
then
  echo "No target device defined"
  exit 0
fi

if [ "$2" != "r"  ] && [ "$2" != "k"  ] && [ "$2" != "4k"  ] && [ "$2" != "stock"  ]
then
  echo "No build specification defined"
  exit 0
fi

#****************************************************************
## Set target:

if [ "$1" = "s" ]
then
trgt=galaxysmtd
fi

if [ "$1" = "s2" ]
then
trgt=i9100
fi

if [ "$1" = "p970" ]
then
trgt=p970
fi

if [ "$1" = "p4wifi" ]
then
trgt=p4wifi
fi

#****************************************************************
## Set basic folder parameters:
finalout=~/android/cm10_1/out/target/product/$trgt
androidtop=~/android/cm10_1
secsign=~/android/cm10_1/build/target/product/security

#****************************************************************
## Start the build:
if [ "$trgt" = "galaxysmtd" ]  &&  [ "$2" = "r" ]
then
echo "A CM10.1-based rom will be build for $trgt"
cm101-build-srom "${trgt}" "${finalout}" "${androidtop}" "${secsign}" "${rn}" "${rv}" "${kn}" "${kv}"
fi

if [ "$trgt" = "galaxysmtd" ]  &&  [ "$2" = "k" ]
then
echo "A single CM10.1-based kernel will be build for $trgt"
cm101-build-skernel "${trgt}" "${finalout}" "${androidtop}" "${secsign}" "${kn}" "${kv}"
fi

if [ "$trgt" = "galaxysmtd" ]  &&  [ "$2" = "4k" ]
then
echo "All four CM10.1-based kernel flavours will be build for $trgt"
cm101-build-s4kernels "${trgt}" "${finalout}" "${androidtop}" "${secsign}" "${kn}" "${kv}"
fi

if [ "$trgt" = "galaxysmtd" ]  &&  [ "$2" = "stock" ]
then
echo "A stock CM10.1-based kernel will be build for $trgt"
cm101-build-sstockkernel "${trgt}" "${finalout}" "${androidtop}" "${secsign}" "${kn}" "${kv}"
fi

if [ "$trgt" = "i9100"  ]  &&  [ "$2" = "r" ]
then
echo "A CM10.1-based rom will be build for $trgt"
cm101-build-rom "${trgt}" "${finalout}" "${androidtop}" "${secsign}" "${rn}" "${s2rv}"
fi

if [ "$trgt" = "p970"  ]  &&  [ "$2" = "r" ]
then
echo "A CM10.1-based rom will be build for $trgt"
cm101-build-rom "${trgt}" "${finalout}" "${androidtop}" "${secsign}" "${rn}" "${p970rv}"
fi

if [ "$trgt" = "p4wifi"  ]  &&  [ "$2" = "r" ]
then
echo "A CM10.1-based rom will be build for $trgt"
cm101-build-rom "${trgt}" "${finalout}" "${androidtop}" "${secsign}" "${rn}" "${p4wifirv}"
fi
